{
  "plugins": {
    "@release-it/conventional-changelog": {
      "infile": "CHANGELOG.md",
      "preset": {
        "name": "conventionalcommits",
        "header": "Changelog",
        "commitUrlFormat": "{{host}}/{{owner}}/{{repository}}/-/commit/{{hash}}",
        "types": [
          {
            "type": "feat",
            "section": "✨ Features"
          },
          {
            "type": "fix",
            "section": "🐛 Bug Fixes"
          },
          {
            "type": "perf",
            "section": "⚡ Performance Improvements"
          },
          {
            "type": "revert",
            "section": "⏪ Reverts"
          },
          {
            "type": "style",
            "section": "💄 Styles"
          },
          {
            "type": "docs",
            "section": "📝 Documentation"
          },
          {
            "type": "test",
            "section": "✅ Tests"
          },
          {
            "type": "refactor",
            "section": "♻ Code Refactoring"
          },
          {
            "type": "build",
            "section": "👷‍ Build System "
          },
          {
            "type": "ci",
            "section": "🔧 Continuous Integration"
          },
          {
            "type": "chore",
            "section": "🎫 Chores",
            "hidden": false
          }
        ]
      }
    }
  },
  "npm": {
    "publish": false
  },
  "git": {
    "commitMessage": "${version}",
    "tagName": "v${version}"
  }
}